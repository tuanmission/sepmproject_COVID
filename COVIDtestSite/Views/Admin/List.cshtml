
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Test Sites</h1>

@Html.ActionLink("Add a Test Site", "AddTestSite","Admin","", new { @class="btn btn-primary" })
<div class="table-responsive">
    <table class="table table-hover" id="testtable">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Provider</th>
                <th scope="col">Waiting Time</th>
                <th scope="col">View Queue</th>
                <th scope="col">Edit</th>

            </tr>

        </thead>
        <tbody>
            <tr></tr>
        </tbody>

    </table>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {

            var table = $("#testtable").DataTable({
                ajax: {

                    url: "/api/Admin/",
                    dataSrc: "",

                },
                columns: [
                    {
                        data: "testSiteName"
                    },
                    {
                        data: "address"
                    },
                    {
                        data: "provider.providerName"

                    },
                    {
                        data:"waitingTime"
                    },
                    {

                        data: "id",
                        render: function (data) {
                            return "<a href='/Admin/patientqueue/" + data + "' class='btn btn-primary'>View Patient Queue</a>";
                        }

                    },
                    {

                        data: "id",
                        render: function (data) {
                            return "<a href='/Admin/edit/" + data + "' class='btn btn-primary'>Edit Test Site</a>";
                        }
                    }

                ]

            });


            });











    </script>

}
